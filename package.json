{
  "name": "cellar-static-deploy",
  "version": "0.2.0",
  "description": "A fast, simple tool to deploy static websites to Clever Cloud's Cellar Object Storage (S3 compatible)",
  "main": "index.ts",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "cellar-static-deploy": "./index.ts"
  },
  "scripts": {
    "start": "bun run index.ts",
    "build": "bun build --compile --minify --sourcemap ./index.ts --outfile cellar-static-deploy",
    "build:linux-x64": "bun build --compile --minify --sourcemap --target=bun-linux-x64 ./index.ts --outfile cellar-static-deploy-linux-x64",
    "build:linux-arm64": "bun build --compile --minify --sourcemap --target=bun-linux-arm64 ./index.ts --outfile cellar-static-deploy-linux-arm64",
    "build:darwin-arm64": "bun build --compile --minify --sourcemap --target=bun-darwin-arm64 ./index.ts --outfile cellar-static-deploy-darwin-arm64",
    "build:windows-x64": "bun build --compile --minify --sourcemap --target=bun-windows-x64 ./index.ts --outfile cellar-static-deploy-windows-x64",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-arm64 && bun run build:windows-x64"
  },
  "keywords": [
    "cellar",
    "clever-cloud",
    "s3",
    "static",
    "deploy",
    "bun"
  ],
  "author": "davlgd",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davlgd/cellar-static-deploy.git"
  },
  "homepage": "https://github.com/davlgd/cellar-static-deploy#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@bomb.sh/args": "^0.3.1",
    "@types/inquirer": "^9.0.8",
    "inquirer": "^12.9.0"
  }
}
